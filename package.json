{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@clarivate/ui-router-angular-hybrid",
  "version": "1.0.0",
  "scripts": {
    "example": "cd example && npm i && npm start",
    "clean": "shx rm -rf lib _bundles dist",
    "build": "npm run clean && ng-packagr -p package.json",
    "release": "release --deps @uirouter/core @uirouter/angular @uirouter/angularjs",
    "test": "npm run build",
    "test:downstream": "npm run build && test_downstream_projects",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "peerDependencies": {
    "@angular/core": "^9.0.0 || ^10.0.0 || ^11.0.0 || ^12.0.0",
    "@angular/upgrade": "^9.0.0 || ^10.0.0 || ^11.0.0 || ^12.0.0",
    "@clarivate/ui-router-angular": "^1.0.0",
    "@clarivate/ui-router-angularjs": "^1.0.0",
    "angular": "^1.5.0"
  },
  "devDependencies": {
    "@angular/animations": "9.1.12",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/compiler-cli": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/upgrade": "^9.0.0",
    "@types/angular": "^1.7.0",
    "@types/jquery": "^3.3.37",
    "@clarivate/ui-router-angular": "^1.0.0",
    "@clarivate/ui-router-angularjs": "^1.0.0",
    "@uirouter/core": "^6.0.6",
    "@uirouter/publish-scripts": "^2.5.3",
    "@uirouter/rx": "^0.6.5",
    "angular": "^1.7.9",
    "husky": "^4.2.5",
    "ng-packagr": "^9.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rxjs": "^6.5.5",
    "rxjs-compat": "^6.5.5",
    "shx": "^0.3.2",
    "typescript": "~3.8.3",
    "zone.js": "^0.10.3"
  },
  "distDir": "dist",
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    }
  },
  "sideEffects": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ui-router/angular-hybrid.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
